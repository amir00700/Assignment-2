extends layout
block content
  .container
      if errors
        each error in errors
          div(class="danger") #{error.msg}
      h1 Become our Member
      form(method='POST', action='/register')
        #form-group
          label Name:
          input.form-control(name='name', type='text')
        #form-group
          label Your Email:
          input.form-control(name='username', type='text')
        #form-group
          label Password:
          input.form-control(name='password',type='password')
        #form-group
          label Confirm Password:
          input.form-control(name='confirmPassword',type='password')
        br
        input.btn.btn-primary(type='submit',value='Register')